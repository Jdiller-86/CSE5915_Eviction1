<!-- Mediator Availability-->
<% if @user.Role == "Mediator" && @user.mediator.present? %>
  <% available = @user.mediator.Available %>
  <% status_text = available ? "Available" : "Not Available" %>
  <% status_class = available ? "status-available" : "status-unavailable" %>

  <div class="availability-box">
    <h3><i class="fa-solid fa-circle-check"></i> Mediator Availability</h3>
    <p>
      Your status: 
      <span class="availability-badge <%= status_class %>"><%= status_text %></span>
    </p> 
    <p>
      You can update it on the <%= link_to "Account", account_path, class: "dashboard-link" %> page.
    </p>
  </div>
<% end %>

