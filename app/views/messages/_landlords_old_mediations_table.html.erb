
<hr>
<h2>Past Mediations</h2>

<table class="table table-striped">
<thead>
    <tr>
    <th>Tenant Name</th>
    <th>Email</th>
    <th>Ended At</th>
    <th>Summary</th>
    <th>Feedback</th>
    </tr>
</thead>
<tbody>
    <% @past_mediations.each do |mediation| %>
    <% tenant = mediation.tenant %>
    <tr>
        <td><%= tenant.FName %> <%= tenant.LName %></td>
        <td><%= tenant.Email %></td>
        <td><%= mediation.deleted_at.strftime("%B %d, %Y %I:%M %p") %></td>
        <td>
        <%= link_to "View Summary", mediation_summary_path(mediation.ConversationID), class: "btn btn-outline-primary btn-sm" %>
        </td>
        <td>
          <% if needs_good_faith_response?(mediation, @user) %>
            <%= link_to "Complete Feedback", good_faith_response_path(mediation.ConversationID), class: "btn btn-warning btn-sm" %>
          <% else %>
            <span class="text-muted">Submitted</span>
          <% end %>
        </td>
    </tr>
    <% end %>
</tbody>
</table>

